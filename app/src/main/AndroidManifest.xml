<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myslsa.vidhika">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
<!--    <uses-permission android:name="android.permission.CAMERA" tools:node="remove"/>-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GrievanceActivity">
            <intent-filter>
                <action android:name="android.intent.action.Grievance" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GrievanceActivityHindi">
            <intent-filter>
                <action android:name="android.intent.action.Grievance" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListActivity">
        <intent-filter>
            <action android:name="android.intent.action.List" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity android:name=".DetailData">
            <intent-filter>
                <action android:name="android.intent.action.DetailData" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditActivity">
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConfirmSubmitActivity">
            <intent-filter>
                <action android:name="android.intent.action.Confirm" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WelcomeEnglishActivity"></activity>
        <activity android:name=".WelcomeHindiActivity"></activity>
        <activity android:name=".GrievanceFileActivity"></activity>
        <activity android:name=".SlsaActivity"></activity>
        <activity android:name=".LegalAidActivity"></activity>
        <activity android:name=".PLVActivity"></activity>
        <activity android:name=".PLAActivity" ></activity>
        <activity android:name=".LoginActivity" ></activity>
        <activity android:name=".ConfirmSubmitLoginActivity"></activity>
        <activity android:name=".DLSAAllotedListActivity"></activity>
        <activity android:name=".UpdateActivity"></activity>
        <activity android:name=".PLVAllotedListActivity" ></activity>
        <activity android:name=".LogoutActivity" ></activity>
        <activity android:name=".LocationConfirmActivity" ></activity>
        <activity android:name=".LocationFinalActivity" ></activity>
        <activity android:name=".PLVUpdateActivity" ></activity>
        <activity android:name=".FinishedGrievanceListActivity" ></activity>
        <activity android:name=".DLSAAcceptedListActivity" ></activity>
        <activity android:name=".TrackingActivity" ></activity>


    </application>

</manifest>