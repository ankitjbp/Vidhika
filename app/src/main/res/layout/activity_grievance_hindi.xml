<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrievanceActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView12"
                android:textSize="22sp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="शिकायत दर्ज करें"
                android:textColor="#546e7a"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="जिला चुनें"
                android:textColor="#546e7a"/>

            <Spinner
                android:id="@+id/districts"

                android:prompt="@string/districts_prompt"
            android:entries="@array/districts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ईमेल"
                android:textColor="#546e7a"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="10dp"
                android:background="@xml/input"
                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="शिकायतकर्ता का नाम "
                android:textColor="#546e7a"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="10dp"
                android:background="@xml/input"
                android:layout_marginBottom="10dp"
                android:inputType="text"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="मोबाइल नंबर "
                android:textColor="#546e7a"
                />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="10dp"
                android:background="@xml/input"
                android:layout_marginBottom="10dp"
                android:inputType="phone"
                android:maxLength="10"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="विवरण लिखें "
                android:textColor="#546e7a"/>


            <EditText
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:padding="10dp"
                android:background="@xml/input"
                android:layout_marginBottom="10dp"
                android:inputType="text"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="वर्तमान पता "
                android:textColor="#546e7a"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="10dp"
                android:background="@xml/input"
                android:layout_marginBottom="10dp"
                android:inputType="text"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="सहायता का प्रकार चुनें "
                android:textColor="#546e7a"/>

            <RadioGroup
                android:id="@+id/help_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkedButton="@id/radio1">

                    <RadioButton android:id="@+id/radio1"
                        android:text="भोजन "
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:drawableEnd="@drawable/food"
                        />


                    <RadioButton android:id="@+id/radio2" android:text="आश्रय"
                        android:layout_width="600px" android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/home"
                        />

                    <RadioButton android:id="@+id/radio3" android:text="वस्त्र "
                        android:layout_width="600px" android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/clothing"
                        />

                    <RadioButton android:id="@+id/radio4" android:text="श्रम सेवा भुगतान में समस्या "
                        android:layout_width="600px" android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/deficit"
                        />

            </RadioGroup>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="शिकायत दर्ज करें"
                android:background="@xml/button"
                android:textColor="#fff"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
