<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrievanceFileActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView12"
                android:textSize="22sp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Grievance"
                android:textColor="#546e7a"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select District"
                android:textColor="#546e7a"/>

            <Spinner
                android:id="@+id/districts"

                android:prompt="@string/districts_prompt"
            android:entries="@array/districts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#546e7a"/>

            <EditText
                android:id="@+id/uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="10dp"
                android:background="@xml/input"
                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#546e7a"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="10dp"
                android:background="@xml/input"
                android:layout_marginBottom="10dp"
                android:inputType="text"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textColor="#546e7a"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="10dp"
                android:background="@xml/input"
                android:layout_marginBottom="10dp"
                android:inputType="phone"/>
            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Details"
                android:textColor="#546e7a"/>


            <EditText
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:padding="10dp"
                android:background="@xml/input"
                android:layout_marginBottom="10dp"
                android:inputType="text"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#546e7a"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="10dp"
                android:background="@xml/input"
                android:layout_marginBottom="10dp"
                android:inputType="text"/>

            <TextView
                android:id="@+id/file_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select File"
                android:textColor="#546e7a"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/select_file_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select File"
                android:background="@xml/button"
                android:textColor="#fff"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/image_view_upload"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help Type"
                android:textColor="#546e7a"/>

            <RadioGroup
                android:id="@+id/help_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkedButton="@id/radio1">

                    <RadioButton android:id="@+id/radio1"
                        android:text="Food"
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:drawableEnd="@drawable/food"
                        />


                    <RadioButton android:id="@+id/radio2" android:text="Shelter"
                        android:layout_width="420px" android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/home"
                        />

                    <RadioButton android:id="@+id/radio3" android:text="Clothing"
                        android:layout_width="460px" android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/clothing"
                        />

                    <RadioButton android:id="@+id/radio4" android:text="Deficit In Service"
                        android:layout_width="540px" android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/deficit"
                        />

            </RadioGroup>


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Grievance"
                android:background="@xml/button"
                android:textColor="#fff"
                />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
